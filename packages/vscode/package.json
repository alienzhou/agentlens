{
  "name": "agentlens",
  "version": "0.1.0",
  "displayName": "AgentLens",
  "description": "Track AI agent contributions in your codebase. Know which code was written by AI vs humans with GitLens-style inline blame.",
  "publisher": "vibe-x-ai",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "ai",
    "agent",
    "copilot",
    "cursor",
    "claude",
    "code review",
    "git blame",
    "vibe coding"
  ],
  "badges": [
    {
      "url": "https://img.shields.io/github/license/alienzhou/agentlens",
      "href": "https://github.com/alienzhou/agentlens/blob/main/LICENSE",
      "description": "License"
    },
    {
      "url": "https://img.shields.io/github/stars/alienzhou/agentlens",
      "href": "https://github.com/alienzhou/agentlens",
      "description": "GitHub Stars"
    }
  ],
  "homepage": "https://github.com/alienzhou/agentlens#readme",
  "bugs": {
    "url": "https://github.com/alienzhou/agentlens/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alienzhou/agentlens"
  },
  "author": {
    "name": "alienzhou",
    "url": "https://github.com/alienzhou"
  },
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "SCM Providers"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "contributes": {
    "configuration": {
      "title": "AgentLens",
      "properties": {
        "agentLens.logLevel": {
          "type": "string",
          "default": "info",
          "enum": ["debug", "info", "warn", "error"],
          "enumDescriptions": [
            "Show all logs including debug information",
            "Show info, warn, and error logs",
            "Show warn and error logs only",
            "Show error logs only"
          ],
          "description": "Log level for AgentLens extension"
        },
        "agentLens.logToFile": {
          "type": "boolean",
          "default": true,
          "description": "Write logs to file (.agentlens/logs/)"
        },
        "agentLens.logRetentionDays": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 30,
          "description": "Number of days to keep log files"
        },
        "agentLens.matching.timeWindowDays": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 30,
          "description": "Time window for matching agent records (in days)"
        },
        "agentLens.matching.lengthTolerance": {
          "type": "number",
          "default": 0.5,
          "minimum": 0.1,
          "maximum": 2.0,
          "description": "Content length tolerance for filtering (0.5 = 50%)"
        },
        "agentLens.developerMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable developer mode to show extra debug information"
        },
        "agentLens.autoCleanup.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic cleanup of old data files"
        },
        "agentLens.autoCleanup.retentionDays": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 90,
          "description": "Number of days to retain data files (changes, prompts)"
        },
        "agentLens.autoCleanup.checkIntervalHours": {
          "type": "number",
          "default": 24,
          "minimum": 1,
          "maximum": 168,
          "description": "Interval between cleanup checks (in hours)"
        }
      }
    },
    "commands": [
      {
        "command": "agentlens.showBlame",
        "title": "AgentLens: Show Blame"
      },
      {
        "command": "agentlens.connectAgent",
        "title": "AgentLens: Connect Agent",
        "icon": "$(plug)"
      },
      {
        "command": "agentlens.disconnectAgent",
        "title": "AgentLens: Disconnect Agent",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "agentlens.showStatus",
        "title": "AgentLens: Show Agent Status"
      },
      {
        "command": "agentlens.reportIssue",
        "title": "AgentLens: Report Matching Issue"
      },
      {
        "command": "agentlens.cleanup",
        "title": "AgentLens: Cleanup Old Data"
      },
      {
        "command": "agentlens.cleanupStats",
        "title": "AgentLens: Show Data Statistics"
      },
      {
        "command": "agentlens.refreshAgents",
        "title": "Refresh Agents",
        "icon": "$(refresh)"
      },
      {
        "command": "agentlens.refreshActivity",
        "title": "Refresh Activity",
        "icon": "$(refresh)"
      },
      {
        "command": "agentlens.openActivityDiff",
        "title": "View Changes",
        "icon": "$(diff)"
      },
      {
        "command": "agentlens.openActivityFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agentlens",
          "title": "AgentLens",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "agentlens": [
        {
          "id": "agentlens.agents",
          "name": "Connected Agents",
          "icon": "$(plug)"
        },
        {
          "id": "agentlens.activity",
          "name": "Recent Activity",
          "icon": "$(history)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "agentlens.agents",
        "contents": "Connect an AI coding assistant to start tracking code contributions.\n[Connect Cursor](command:agentlens.connectAgent)\n[Connect Claude Code](command:agentlens.connectAgent)\n\nAfter connecting, AgentLens will automatically track which code was written by AI.",
        "when": "agentlens.noAgentsConnected"
      },
      {
        "view": "agentlens.activity",
        "contents": "No recent AI activity detected.\n\nTo start tracking:\n1. [Connect an Agent](command:agentlens.connectAgent)\n2. Use your AI assistant to write code\n3. Changes will appear here automatically\n\n[Learn More](https://github.com/vibe-x-ai/agent-blame#readme)",
        "when": "agentlens.noActivity"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "agentlens.connectAgent",
          "when": "view == agentlens.agents && viewItem == agent-detected",
          "group": "inline"
        },
        {
          "command": "agentlens.disconnectAgent",
          "when": "view == agentlens.agents && viewItem == agent-connected",
          "group": "inline"
        },
        {
          "command": "agentlens.openActivityFile",
          "when": "view == agentlens.activity && viewItem == activity",
          "group": "inline@1"
        },
        {
          "command": "agentlens.openActivityDiff",
          "when": "view == agentlens.activity && viewItem == activity",
          "group": "inline@2"
        },
        {
          "command": "agentlens.openActivityFile",
          "when": "view == agentlens.activity && viewItem == activity",
          "group": "navigation@1"
        },
        {
          "command": "agentlens.openActivityDiff",
          "when": "view == agentlens.activity && viewItem == activity",
          "group": "navigation@2"
        }
      ],
      "view/title": [
        {
          "command": "agentlens.refreshAgents",
          "when": "view == agentlens.agents",
          "group": "navigation"
        },
        {
          "command": "agentlens.refreshActivity",
          "when": "view == agentlens.activity",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run bundle",
    "build": "tsc",
    "bundle": "node esbuild.config.mjs --production",
    "dev": "node esbuild.config.mjs --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@vibe-x/agentlens-core": "workspace:*",
    "@vibe-x/agentlens-hook": "workspace:*",
    "esbuild": "^0.24.2",
    "@types/vscode": "^1.85.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport-vscode": "^0.1.0"
  },
  "license": "MIT"
}
