{
  "name": "@vibe-x/agent-blame-vscode",
  "version": "0.1.0",
  "displayName": "Agent Blame",
  "description": "VS Code extension for Agent Blame - Track AI agent contributions",
  "publisher": "alienzhou",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "contributes": {
    "configuration": {
      "title": "Agent Blame",
      "properties": {
        "agentBlame.logLevel": {
          "type": "string",
          "default": "info",
          "enum": ["debug", "info", "warn", "error"],
          "enumDescriptions": [
            "Show all logs including debug information",
            "Show info, warn, and error logs",
            "Show warn and error logs only",
            "Show error logs only"
          ],
          "description": "Log level for Agent Blame extension"
        },
        "agentBlame.logToFile": {
          "type": "boolean",
          "default": true,
          "description": "Write logs to file (.agent-blame/logs/)"
        },
        "agentBlame.logRetentionDays": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 30,
          "description": "Number of days to keep log files"
        },
        "agentBlame.matching.timeWindowDays": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 30,
          "description": "Time window for matching agent records (in days)"
        },
        "agentBlame.matching.lengthTolerance": {
          "type": "number",
          "default": 0.5,
          "minimum": 0.1,
          "maximum": 2.0,
          "description": "Content length tolerance for filtering (0.5 = 50%)"
        },
        "agentBlame.developerMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable developer mode to show extra debug information"
        },
        "agentBlame.autoCleanup.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic cleanup of old data files"
        },
        "agentBlame.autoCleanup.retentionDays": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 90,
          "description": "Number of days to retain data files (changes, prompts)"
        },
        "agentBlame.autoCleanup.checkIntervalHours": {
          "type": "number",
          "default": 24,
          "minimum": 1,
          "maximum": 168,
          "description": "Interval between cleanup checks (in hours)"
        }
      }
    },
    "commands": [
      {
        "command": "agent-blame.showBlame",
        "title": "Agent Blame: Show Blame"
      },
      {
        "command": "agent-blame.connectAgent",
        "title": "Agent Blame: Connect Agent"
      },
      {
        "command": "agent-blame.disconnectAgent",
        "title": "Agent Blame: Disconnect Agent"
      },
      {
        "command": "agent-blame.showStatus",
        "title": "Agent Blame: Show Agent Status"
      },
      {
        "command": "agentBlame.reportIssue",
        "title": "Agent Blame: Report Matching Issue"
      },
      {
        "command": "agent-blame.cleanup",
        "title": "Agent Blame: Cleanup Old Data"
      },
      {
        "command": "agent-blame.cleanupStats",
        "title": "Agent Blame: Show Data Statistics"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agent-blame",
          "title": "Agent Blame",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "agent-blame": [
        {
          "id": "agent-blame.agents",
          "name": "Connected Agents"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@agent-blame/core": "workspace:*",
    "@vibe-x/agent-blame": "workspace:*",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport-vscode": "^0.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "license": "MIT"
}
