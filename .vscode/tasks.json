{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-vscode-extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "agentlens", "build"],
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "watch-vscode-extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "agentlens", "dev"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
